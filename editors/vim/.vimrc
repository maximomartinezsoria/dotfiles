set number
set numberwidth=1
set clipboard=unnamed
syntax enable
set showcmd
set ruler
set encoding=utf-8
set showmatch
set sw=2
set expandtab
set autoindent
set relativenumber
set laststatus=2
set noshowmode
set nowrap
set smartcase
set smartindent
set noswapfile
set nobackup
set undodir=~/.vim/undodir
set undofile
set incsearch
set termguicolors
set scrolloff=8
set noshowmode
filetype on

set cmdheight=2


call plug#begin('~/.vim/plugged')

" Themes
Plug 'hzchirs/vim-material'
Plug 'vim-airline/vim-airline'
Plug 'vim-airline/vim-airline-themes'

" IDE
Plug 'nvim-lua/popup.nvim'
